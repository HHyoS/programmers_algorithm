#include <string>
#include <vector>
#include <iostream>

using namespace std;

int solution(string name) {
    int answer = 0;
    string al = "A";
    vector<int> ar;
    vector<int> array;
    for(int a = 0; a < name.length()-1; ++a)
        al +="A";
    for(int a = 0; a < name.length(); ++a){
        if(al.at(a) == name.at(a)){
            ar.push_back(0);
        }
        else{
            int count = 0;
            int temp = 90 - int(name.at(a));
            char comp = al.at(a);
            if(temp < 12){
                while(comp != name.at(a)){
                    comp -= 1;
                    if(comp < 'A')
                        comp = 'Z';
                    ++count;                    
                }
                ar.push_back(count);
            }
            else{
                while(comp != name.at(a)){
                    comp+= 1;
                    if(comp > 'Z')
                        comp = 'A';
                    ++count;
                }
                ar.push_back(count);
            }
        }
    }
    int big = 0;
    int one = ar[0];
    int t = 0;
    
    for(int a = 1; a < name.length(); ++a){
        if(ar[a] == 0)
            ++t;
        else{
            one = one + ar[a] + 1 +t;
            t= 0;
        }
        
    }
    int two = ar[0];
    t= 0;
    for(int a = name.length()-1; a >0; --a){
        if(ar[a] == 0)
            ++t;
        else{
            two = two + ar[a] + 1 + t;
            t = 0;
            }
    }
    printf("one = %d two = %d",one,two);
    if(one > two)
        return two;
    else
        return one;
}
